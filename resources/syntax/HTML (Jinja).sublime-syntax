%YAML 1.2
---
name: HTML (Jinja)
file_extensions:
  - html.j2
  - html.jinja
  - html.jinja2
  - htm.j2
  - htm.jinja
  - htm.jinja2
scope: text.html.jinja

extends: Jinja.sublime-syntax

contexts:
  main:
    # Override base syntax.
    - match: ''
      push: Packages/HTML/HTML.sublime-syntax
      with_prototype:
        - include: comment
        - include: statement_block
        - include: expression_block
